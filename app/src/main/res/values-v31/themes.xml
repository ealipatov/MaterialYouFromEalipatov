<resources>
    <style name="AppTheme" parent="Theme.MaterialYouFromEalipatov">
        <item name="textColorConnected">@color/color_connected</item>
        <item name="textColorDisConnected">@color/color_disconnected</item>

        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <!-- Цвет текста заголовка-->
        <item name="textColorTitle">@android:color/black</item>
        <!-- Цвет текста основного-->
        <item name="textColorBody">@android:color/black</item>
        <!-- Цвет фона -->
        <item name="backgroundAppThemeColor">@color/light_gray</item>
        <!-- Цвет фона меню -->
        <item name="backgroundMenuAppThemeColor">@color/dark_gray</item>
        <!-- Цвет фона BottomSheet-->
        <item name="backgroundBottomSheetColor">@color/color_primary</item>

        <!-- Цвет фона Chip-->
        <item name="appChipBackgroundColor">@color/moon_primary_light_night_color</item>
        <!-- Цвет фона CardView-->
        <item name="appCardViewBackgroundColor">@color/moon_background_color</item>

        <!-- Стиль для чипов -->
        <item name="chipStyle">@style/AppChipChoice</item>
        <!-- Стиль для material card -->
        <item name="materialCardViewStyle">@style/AppCard</item>

        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="appSwitchActiveColor">@color/color_primary</item>
        <!-- неактивное состояние ползунка -->
        <item name="appSwitchNoActiveColor">@color/ic_launcher_background</item>
        <!-- Цвет дорожки, вдоль которой двигается ползунок -->
        <item name="appSwitchTintColor">@android:color/darker_gray</item>

        <item name="android:windowSplashScreenBackground">@color/light_gray</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/black</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splash_screen</item>
    </style>
</resources>