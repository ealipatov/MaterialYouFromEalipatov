<resources>
    <!-- Base application theme. -->
    <style name="Theme.MaterialYouFromEalipatov" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialYouFromEalipatov">
        <item name="textColorConnected">@color/color_connected</item>
        <item name="textColorDisConnected">@color/color_disconnected</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>

        <!-- Стиль для чипов -->
        <item name="chipStyle">@style/AppChipChoice</item>
        <!-- Стиль для material card -->
        <item name="materialCardViewStyle">@style/AppCard</item>
    </style>

    <style name="MoonTheme" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/moon_primary_night_color</item>
        <item name="colorPrimaryVariant">@color/moon_primary_dark_night_color</item>
        <item name="colorOnPrimary">@color/moon_primary_light_night_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/moon_secondary_night_color</item>
        <item name="colorSecondaryVariant">@color/moon_secondary_dark_night_color</item>
        <item name="colorOnSecondary">@color/moon_secondary_light_night_color</item>

        <!-- активное состояние (30% прозрачности для фона) -->
        <item name="appSwitchActiveColor">@color/moon_control_activated_color</item>
        <!-- неактивное состояние ползунка -->
        <item name="appSwitchNoActiveColor">@color/moon_secondary_text_night_color</item>
        <!-- Цвет дорожки, вдоль которой двигается ползунок -->
        <item name="appSwitchTintColor">@color/moon_track_tint_color</item>

        <!-- Цвет текста заголовка-->
        <item name="textColorTitle">@color/moon_secondary_text_night_color</item>
        <!-- Цвет текста основного-->
        <item name="textColorBody">@color/moon_secondary_text_night_color</item>
        <!-- Цвет фона -->
        <item name="backgroundAppThemeColor">@color/moon_secondary_night_color</item>
        <!-- Цвет фона BottomSheet-->
        <item name="backgroundBottomSheetColor">@color/moon_primary_light_night_color</item>
        <!-- Цвет фона Chip-->
        <item name="appChipBackgroundColor">@color/moon_primary_light_night_color</item>
        <!-- Цвет фона CardView-->
        <item name="appCardViewBackgroundColor">@color/moon_secondary_night_color</item>
    </style>

    <style name="MarsTheme" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mars_primary_night_color</item>
        <item name="colorPrimaryVariant">@color/mars_primary_dark_night_color</item>
        <item name="colorOnPrimary">@color/mars_primary_light_night_color</item>
        <!-- Primary brand color. -->
        <item name="colorSecondary">@color/mars_secondary_night_color</item>
        <item name="colorSecondaryVariant">@color/mars_secondary_dark_night_color</item>
        <item name="colorOnSecondary">@color/mars_secondary_light_night_color</item>

        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearance.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>

        <!-- Цвет активного ползунка -->
        <item name="appSwitchActiveColor">@android:color/holo_orange_dark</item>
        <!-- Цвет не активного ползунка  -->
        <item name="appSwitchNoActiveColor">@color/moon_secondary_text_night_color</item>
        <!-- Цвет дорожки, вдоль которой двигается ползунок -->
        <item name="appSwitchTintColor">@android:color/darker_gray</item>

        <!-- Цвет текста заголовка-->
        <item name="textColorTitle">@color/mars_secondary_text_night_color</item>
        <!-- Цвет текста основного-->
        <item name="textColorBody">@color/mars_secondary_text_night_color</item>
        <!-- Цвет фона -->
        <item name="backgroundAppThemeColor">@color/mars_secondary_dark_night_color</item>
        <!-- Цвет фона BottomSheet-->
        <item name="backgroundBottomSheetColor">@color/mars_secondary_night_color</item>
        <!-- Цвет фона Chip-->
        <item name="appChipBackgroundColor">@color/mars_secondary_night_color</item>
        <!-- Цвет фона CardView-->
        <item name="appCardViewBackgroundColor">@color/mars_secondary_night_color</item>

    </style>
</resources>